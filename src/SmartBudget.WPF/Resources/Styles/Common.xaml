    <Style x:Key="TextRegularPrimaryDark" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RubikRegular}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{StaticResource BrushPrimaryDark}" />
    </Style>
    <Style x:Key="TextLightPrimaryDark" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource RubikLight}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{StaticResource BrushPrimaryDark}" />
